= form_tag workitem_path(@workitem), :method => 'PUT'  do
  %label 审批意见(最多255个字)
  %br
  %textarea{:name => 'workitem[comments]', :maxlength => 255, :cols => 65, :rows => 5}
  %br
  - if @workitem.params['in_form']
    = render @workitem.params['in_form']
    %br
  
  - if @custom_fields.any?
    - @custom_fields.each do |field|
      - if field['type'] == 'checkbox'
        = check_box_tag("workitem[fields][#{field['name']}]", 'yes')
        = field['label']
      - if field['type'] == 'radio'
        %input{:type =>'radio', :name=>"workitem[fields][#{field['name']}]", :value=>field['value']}
        = field['label']
    %br

  = workitem_return_button(@workitem) if !@workitem.top_tag.blank?
  = workitem_proceed_button(@workitem)

  = link_to '取消', request.env['HTTP_REFERER']


