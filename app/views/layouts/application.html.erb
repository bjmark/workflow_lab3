<!DOCTYPE html>
<html>
  <head>
    <title>WorkflowLab</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% if !flash.keys.empty? %>
      <strong>
        <% flash.each do |k,v| %>
          <%= "#{k} : #{v}"%><br>
        <% end %>
      </strong>
    <% end %>
    <% if !current_user %>
      user: not login
    <% else %>
      user:
      <%= "#{current_user.name}"%>
      |
      <%= "#{current_user.roles.collect{|e| e.name + ':' + e.code }.inspect}" %>
      |
      <%= "#{current_user.departments.collect{|e| e.name}.inspect}" %>
    <% end%>
    <hr>
    <%= link_to 'users', '/users' %>
    |
    <%= link_to 'projects', '/projects' %>
    <hr>
    <ul>
      <li><%= link_to "流程待办事项: #{Ruote::Workitem.for_user(current_user).size}", '/workitems' %></li>
    </ul>
    <hr>
    <%= yield %>
  </body>
</html>
